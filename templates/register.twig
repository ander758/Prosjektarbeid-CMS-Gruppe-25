<link rel="stylesheet" href="../css/login.css">
<div class="login-page">

    {% if registerSuccess==false %}
    <div class="form">
        <form class="login-form" method="post">
    <div class="container">
        <h1>Sign Up</h1>
        <p>Create a new user by filling in the form below.</p><hr>

        <label for="firstName"><b>First name</b></label>
        <input type="text" placeholder="First name" name="firstName" required>

        <label for="lastName"><b>Last name</b></label>
        <input type="text" placeholder="Last name" name="lastName" required>

        <label for="username"><b>Username</b></label>
        <input type="text" placeholder="Username" name="username" required>

        <label for="email"><b>E-Mail</b></label>
        <input type="email" placeholder="Enter E-Mail" name="email" required>

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Password" name="psw" required>

        <label for="psw-repeat"><b>Repeat password</b></label>
        <input type="password" placeholder="Password" name="psw-repeat" required>

        {% if passNoMatch==true %}
            <p>Passwords do not match!</p>
        {% endif %}
        <div class="clearfix">
            <a type="button" class="cancelbtn" name="cancel_signup" href="index.php">Cancel</a> <!--Videresend til index-->
            <button type="submit" class="signupbtn" name="submit_signup">Register new user</button>
        </div>
    </div>
        </form>
    </div>
    {% elseif registerSuccess==true %}
        <p>Registration successful! redirecting...<br/>If you are not automatically redirected, click <a href="index.php">here</a></p>
    {% endif %}
</div>